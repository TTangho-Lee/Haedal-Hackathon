<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/background_line_gray"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/certName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JLPT 1ê¸‰"
        android:textSize="16sp"
        android:fontFamily="@font/font_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/certDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2024-11-28"
        android:textSize="12sp"
        android:fontFamily="@font/font_main"
        app:layout_constraintStart_toStartOf="@id/certName"
        app:layout_constraintTop_toBottomOf="@id/certName"/>

    <ImageView
        android:id="@+id/delete_cert_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/x_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>