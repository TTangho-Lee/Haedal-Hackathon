<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summation_month"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="home.ui.summationmonth.SummationMonthFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_workplace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:background="@drawable/background_white_border_10"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/monthly_summation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 근무지"
            android:textSize="20sp"
            android:fontFamily="@font/font_bold"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="0dp"
            android:src="@drawable/back"
            android:backgroundTint="@color/black"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>